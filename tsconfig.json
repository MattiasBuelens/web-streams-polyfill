{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es5",
      "es2015.promise"
    ],
    "newLine": "lf",
    "types": [],
    "strict": true,
    "stripInternal": true,
    "importHelpers": true,
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "baseUrl": "./src"
  },
  "include": [
    "src/"
  ]
}
